<Window x:Class="FlashView2.LasMenuForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:FlashView2"         
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Задание временного интервала, сдвига и корректировки" 
        Height="830" Width="870" 
        WindowStartupLocation="CenterScreen" Background="#FFA2A1A1">
    <Window.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <TabControl Name="tabCtrlLas" Background="#FFA2A1A1">
        <TabItem Name="filesTab" Header="Работа с файлами">
            <TabItem.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="345"/>
                        <RowDefinition Height="178"/>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <Button x:Name="btn_LoadDepthAndTime" Click="btn_LoadDepthAndTime_Click" Height="30" Margin="10,15,10,10">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Open File.png" Height="20" Margin="5,0,5,0"/>
                                    <TextBlock Text="Открыть файл с глубиной" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label Content="NULL значение" Margin="10,0,5,5"/>
                            <TextBox Name="txtBoxNULL" Width="100" Text="-999,9" Margin="5" Height="20" HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label Content="Смещение, в м." Margin="10,0,5,5"/>
                            <TextBox Name="txtBoxShift" Width="100" Text="5" Margin="5,5,0,0" Height="20" HorizontalContentAlignment="Center" />
                        </StackPanel>
                        
                        <GroupBox Padding="5" Width="230" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Seach Data2.png" Height="20" Margin="5,0,5,0" />
                                    <TextBlock Text="Считать данные"/>
                                </StackPanel>
                            </GroupBox.Header>
                            <StackPanel Height="170">
                                <RadioButton Margin="3" IsChecked="True">В интервале определения</RadioButton>
                                <RadioButton Margin="3" IsChecked="{Binding IsSetInterval, Mode=OneWayToSource}">В задаваемом интервале</RadioButton>
                                <GroupBox Header="Задать время">
                                    <StackPanel>
                                        <Label>с</Label>
                                        <xctk:DateTimePicker Name="dtp1" Value="{Binding StartTimeRead, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FormatString="HH:mm:ss dd.MM.yyyy" Format="Custom"/>
                                        <Label>по</Label>
                                        <xctk:DateTimePicker Name="dtp2" Value="{Binding EndTimeRead, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FormatString="HH:mm:ss dd.MM.yyyy" Format="Custom" />
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <GroupBox Name="gbxTruba">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                                    <Image Source="/Truba.jpg" Height="25"/>
                                    <Label Margin="5,0,0,0"  HorizontalAlignment="Left">Труба для МНК</Label>
                                </StackPanel>
                            </GroupBox.Header>

                            <StackPanel>
                                <ComboBox Name="lb1_truba" Grid.Row="1" Grid.Column="0" Height="25" Width="100" HorizontalAlignment="Left" Margin="15,0,0,0" SelectedIndex="0">
                                    <TextBlock>108</TextBlock>
                                    <TextBlock>120</TextBlock>
                                    <TextBlock>178</TextBlock>
                                </ComboBox>
                                <GroupBox Header="Расчет Кп" Margin="15,15,0,0" Padding="5" Width="220" HorizontalAlignment="Left">
                                    <StackPanel>
                                        <RadioButton IsChecked="{Binding isLineCalc, Mode=TwoWay}" Name="rb1_Lin" Margin="5">По линейной зависимости</RadioButton>
                                        <RadioButton Name="rb2_Kvad" Margin="5">По квадратичной зависимости</RadioButton>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>
                        <!--<Button Name="btn_FormLas" Click="btnLasStart_Click" Content="Следующий шаг" Margin="15" Height="30" IsEnabled="False"/>-->
                    </StackPanel>
                    <GroupBox Grid.Column="0" Grid.Row="1" Height="142" Width="230" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Shift Time.png" Height="20" Margin="5,0,0,0"/>
                                <TextBlock Text="Сдвинуть время" Margin="5,0,5,0"/>
                            </StackPanel>
                        </GroupBox.Header>
                        
                        <StackPanel>
                            <RadioButton Name="rb1_Sdvig" Margin="5" Content="Вперед" IsChecked="{Binding IsMoveTimeUp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <RadioButton Name="rb2_Sdvig" Margin="5" Content="Назад"/>
                            <xctk:TimePicker Format="LongTime" Width="100" HorizontalAlignment="Left" Margin="5" Text="{Binding ShiftTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></xctk:TimePicker>
                            <Button Name="btnUseShiftTime" Content="Применить" Margin="5" Height="30" Click="btnUseShiftTime_Click" IsEnabled="{Binding IsMoveTime, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </GroupBox>
                    <!--<StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3">-->
                        <DataGrid x:Name="dtg_DepthAndTime" ColumnHeaderStyle="{StaticResource CenterGridHeaderStyle}" Grid.Column="1" Grid.RowSpan="4"
                      Margin="10,5,10,10" ItemsSource="{Binding DataTable, UpdateSourceTrigger=PropertyChanged}" 
                      AutoGeneratingColumn="r2_AutoGeneratingColumn" >
                        </DataGrid>
                    <!--</StackPanel>-->
                    <DockPanel Grid.Row="4" Grid.ColumnSpan="3" >
                        <StatusBar DockPanel.Dock="Bottom" Background="#FFA2A1A1">
                            <StatusBar.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="110" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </ItemsPanelTemplate>
                            </StatusBar.ItemsPanel>
                            <StatusBarItem>
                                <TextBox Name="txtBoxStatusLas" Text="{Binding StatusLasMenu, UpdateSourceTrigger=PropertyChanged}" Height="33"
                               VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="2,0,0,0" Width="730" TextWrapping="Wrap"/>
                            </StatusBarItem>
                            <Separator Grid.Column="1" />
                            <StatusBarItem Grid.Column="2" VerticalAlignment="Top" Margin="0,10,0,0">
                                <ProgressBar Value="0" Width="90" Height="20" />
                            </StatusBarItem>
                        </StatusBar>
                    </DockPanel>
                </Grid>
            </TabItem.Content>
        </TabItem>
        <TabItem Name="dataTab" Header="Вводные данные для Las" IsEnabled="False">
            <TabItem.Content>
                <Grid Name="dataLasGrid" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Version Informatim" Grid.ColumnSpan="3" Grid.Row="0" HorizontalContentAlignment="Center"/>
                    <Label Content="Версия формата LAS" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Name="txtBoxVers" Text="2.0" Width="100" Height="20" HorizontalContentAlignment="Right" IsEnabled="False"
                                             Grid.Column="1" Grid.Row="1"/>
                    <Label Content="(VERS.)" Grid.Column="2" Grid.Row="1"/>

                    <Label Content="Перенос строки" Grid.Column="0" Grid.Row="2"/>
                    <TextBox Name="txtBoxWrap" Text="NO" Width="100" Height="20" HorizontalContentAlignment="Right" IsEnabled="False"
                             Grid.Column="1" Grid.Row="2"/>
                    <Label Content="(Wrap)" Grid.Column="2" Grid.Row="2"/>

                    <Separator Grid.ColumnSpan="3" Grid.Row="3"/>
                    <Label Content="Well Information Section" Grid.ColumnSpan="3" Grid.Row="4" HorizontalContentAlignment="Center" />

                    <Label Content="Название компании" Grid.Column="0" Grid.Row="5" />
                    <TextBox Name="txtBoxStartM" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right"
                                             Grid.Column="1" Grid.Row="5"/>
                    <Label Content="(COMP.)" Grid.Column="2" Grid.Row="5"/>

                    <Label Content="Имя(номер) скважины" Grid.Column="0" Grid.Row="6" />
                    <TextBox Name="txtBoxWell" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right" 
                                             Grid.Column="1" Grid.Row="6"/>
                    <Label Content="(Well)" Grid.Column="2" Grid.Row="6" />

                    <Label Content="Имя площади" Grid.Column="0" Grid.Row="7"/>
                    <TextBox Name="txtBoxFLD" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right" 
                             Grid.Column="1" Grid.Row="7"/>
                    <Label Content="(FLD.)" Grid.Column="2" Grid.Row="7"/>

                    <Label Content="Координаты скважины" Grid.Column="0" Grid.Row="8"/>
                    <TextBox Name="txtBoxLOC" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right" 
                             Grid.Column="1" Grid.Row="8"/>
                    <Label Content="(LOC.)" Grid.Column="2" Grid.Row="8"/>

                    <Label Content="Страна" Grid.Column="0" Grid.Row="9"/>
                    <TextBox Name="txtBoxCNTY" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right" 
                             Grid.Column="1" Grid.Row="9"/>
                    <Label Content="(CNTY.)" Grid.Column="2" Grid.Row="9"/>

                    <Label Content="Район" Grid.Column="0" Grid.Row="10"/>
                    <TextBox Name="txtBoxSTATE" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right" 
                             Grid.Column="1" Grid.Row="10"/>
                    <Label Content="(STATE.)" Grid.Column="2" Grid.Row="10"/>

                    <Label Content="Геофизическая компания" Grid.Column="0" Grid.Row="11"/>
                    <TextBox Name="txtBoxSRVC" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right" 
                             Grid.Column="1" Grid.Row="11"/>
                    <Label Content="(SRVC.)" Grid.Column="2" Grid.Row="11"/>                    

                    <Label Content="Идентификатор" Grid.Column="0" Grid.Row="12"/>
                    <TextBox Name="txtBoxAPI" Text=" " Width="100" Height="20" HorizontalContentAlignment="Right" 
                             Grid.Column="1" Grid.Row="12"/>
                    <Label Content="(API)" Grid.Column="2" Grid.Row="12"/>
                    <Button Name="btnLasStart" Grid.Row="13" Content="Сформировать LAS" Grid.ColumnSpan="3" Width="150" Margin="10" Click="Button_FormLasClick"/>                    
                </Grid>
            </TabItem.Content>
        </TabItem>
    </TabControl>

</Window>
