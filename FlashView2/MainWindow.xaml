<Window x:Class="FlashView2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashView2"
        mc:Ignorable="d"        
        Title="FlashViewer v.2" Height="530" Width="1700" ResizeMode="NoResize">
    <Grid x:Name="mainGrid" Margin="10,5,10,5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="392*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid Name="datagrid1" Grid.Row ="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5,5,5" ItemsSource="{Binding DataTable}" AutoGeneratingColumn ="r2_AutoGeneratingColumn" Background="#FFD2D2D2"/>
        <Menu Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="auto">
            <MenuItem Header="Файл" BorderBrush="Black" Height="25" Width="100" Padding="15,5,0,0" HorizontalContentAlignment="Center" FontFamily="Times New Roman" VerticalAlignment="Bottom" HorizontalAlignment="Center" VerticalContentAlignment="Bottom" >                
                <MenuItem.Icon>
                    <Image Source="/Icons/File.png" />
                </MenuItem.Icon>
                <MenuItem Click="MenuItemOpenFile_Click">
                    <MenuItem.Header>                      
                        <TextBlock Text="Открыть файл" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                    </MenuItem.Header>
                    <MenuItem.Icon>
                        <Image Source="/Icons/Open File.png" Height="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Сохранить как" Name="menuSaveAs" IsEnabled="{Binding IsLasFile, UpdateSourceTrigger=PropertyChanged}">                   
                    <MenuItem.Icon>
                        <Image Source="/Icons/Save As.png" Height="20"/>
                    </MenuItem.Icon>
                    <MenuItem Header="Сохранить в Excel" Name="btnSaveExcel" Click="btnSaveExcel_Click">
                        <MenuItem.Icon>
                            <Image Source="/Icons/File Excel.png" Height="25"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Сохранить в txt" Name="btnSaveTxT" Click="btnSaveTxT_Click">
                        <MenuItem.Icon>
                            <Image Source="/Icons/File txt.png" Height="25"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Click="MenuItemCloseProgram_Click">
                    <MenuItem.Header>
                        <TextBlock Text="Выход" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                    </MenuItem.Header>
                    <MenuItem.Icon>
                        <Image Source="/Icons/Exit.png" Height="20"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Сформировать LAS" Name="menuButtonFormLas" BorderBrush="Black" Click="menuButtonFormLas_Click" 
                      VerticalAlignment="Center" Width="150" Height="25" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Padding="10,5,0,0" 
                      VerticalContentAlignment="Center" FontFamily="Times New Roman"
                      IsEnabled="{Binding IsLasFile, UpdateSourceTrigger=PropertyChanged}">
                <MenuItem.Icon>
                    <Image Source="/Icons/Form LAS.png" Height="20"/>
                </MenuItem.Icon>
            </MenuItem>
            <!--<MenuItem x:Name="TestBut" Header="Кнопка" BorderBrush="Black" Click="TestBut_Click"/>-->
        </Menu>
        <!--<ProgressBar x:Name ="progBar" HorizontalAlignment="Right" Height="30" Margin="0,0,20,0" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Width="300" Value="{Binding Percent, UpdateSourceTrigger=PropertyChanged}"/>-->

        <DockPanel Grid.Row="2" Grid.ColumnSpan="2">
            <StatusBar DockPanel.Dock="Bottom" Margin="5">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem VerticalAlignment="Top" Margin="0,10,0,0">
                    <TextBox Text="{Binding StatusMainWindow, UpdateSourceTrigger=PropertyChanged}" Name="txtBoxStatus" Width="1520" Height="32"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" 
                             TextWrapping="Wrap" AcceptsReturn="True"/>
                    <!--Text="{Binding StatusMainWindow, UpdateSourceTrigger=PropertyChanged}"-->
                </StatusBarItem>
                <Separator Grid.Column="1" />
                <StatusBarItem Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <ProgressBar Name ="progBar" Width="90" Height="20" Value="{Binding Percent, UpdateSourceTrigger=PropertyChanged}"/>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>

    </Grid>
</Window>
