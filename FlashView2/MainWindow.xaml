        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top">
            <Button Name="btnOpenFile" Width="60" Height="70" Margin="10,2,5,2" Background="#FFA2A1A1" BorderBrush="#FFA2A1A1"
                    Click="MenuItemOpenFile_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="/Icons/File.png" Height="30"/>
                        <Label Content="Открыть&#x0a;  флеш" HorizontalContentAlignment="Center" />
                    </StackPanel>

                </Button.Content>
                <Button.ToolTip>
                    <ToolTip>
                        Открыть файл
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="btnSaveFileExcel" Width="75" Height="70" Margin="10,2,5,2" Background="#FFA2A1A1" BorderBrush="#FFA2A1A1"
                    Click="btnSaveExcel_Click" IsEnabled="{Binding IsLasFile, UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="/File Excel.png" Height="30" />
                        <Label Content="Сохранить &#x0a;  в Excel" />
                    </StackPanel>
                    
                </Button.Content>
                <Button.ToolTip>
                    <ToolTip>
                        Сохранить файл в Excel
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="btnSaveFileTxT" Width="75" Height="70" Margin="10,2,5,2" Background="#FFA2A1A1" BorderBrush="#FFA2A1A1"
                    Click="btnSaveTxT_Click" IsEnabled="{Binding IsLasFile, UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="/File txt.png" Height="30"/>
                        <Label Content="Сохранить&#x0a;     в txt" />
                    </StackPanel>
                    
                </Button.Content>
                <Button.ToolTip>
                    <ToolTip>
                        Сохранить файл в txt
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="btnFormLas" Width="60" Height="70" Margin="10,2,5,2" Background="#FFA2A1A1" BorderBrush="#FFA2A1A1"
                    Click="menuButtonFormLas_Click" IsEnabled="{Binding IsLasFile, UpdateSourceTrigger=PropertyChanged}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Form LAS.png" Height="30"/>
                        <Label Content=" LAS " />
                    </StackPanel>
                   
                </Button.Content>
                <Button.ToolTip>
                    <ToolTip>
                        Сформировать LAS
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <Button Name="btnExit" Width="75" Height="70" Margin="10,2,5,2" Background="#FFA2A1A1" BorderBrush="#FFA2A1A1"
                    Click="MenuItemCloseProgram_Click" >
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Exit.png" Height="30" />
                        <Label Content="Выйти" />
                    </StackPanel>

                </Button.Content>
                <Button.ToolTip>
                    <ToolTip>
                        Сохранить файл в Excel
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>

        <DockPanel Grid.Row="2" Margin="0,3,0,0">
            <StatusBar DockPanel.Dock="Bottom" Margin="5" Background="#FFA2A1A1">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem VerticalAlignment="Top" Margin="0,5,5,0">
                    <TextBox Text="{Binding StatusMainWindow, UpdateSourceTrigger=PropertyChanged}" Name="txtBoxStatus" Width="1520" Height="55"
                             HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" 
                             TextWrapping="Wrap" />
                </StatusBarItem>
                <Separator Grid.Column="1" />
                <StatusBarItem Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <ProgressBar Name ="progBar" Width="90" Height="20" Value="{Binding Percent, UpdateSourceTrigger=PropertyChanged}"/>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>

    </Grid>
</Window>
