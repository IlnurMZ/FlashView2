<Window x:Class="FlashView2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashView2"
        mc:Ignorable="d"        
        Title="FlashViewer v.2" Height="535" Width="1700" ResizeMode="NoResize">
    <Grid x:Name="mainGrid" Margin="10,5,10,5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="392*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid Name="datagrid1" Grid.Row ="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5,5,5" ItemsSource="{Binding DataTable}" AutoGeneratingColumn ="r2_AutoGeneratingColumn"/>
        <Menu Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="215">
            <MenuItem BorderBrush="Black" Height="25" Width="100">
                <MenuItem.Header>
                    <TextBlock Text="Файл" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                </MenuItem.Header>
                <MenuItem Header="Открыть файл" Click="MenuItemOpenFile_Click"/>
                <MenuItem Header="Закрыть" Click="MenuItemCloseProgram_Click"/>
            </MenuItem>
            <MenuItem x:Name="menuButtonFormLas" Header="Сформировать las" BorderBrush="Black" IsEnabled="False" Click="menuButtonFormLas_Click"/>
            <!--<MenuItem x:Name="TestBut" Header="Кнопка" BorderBrush="Black" Click="TestBut_Click"/>-->
        </Menu>
        <ProgressBar x:Name ="progBar" HorizontalAlignment="Right" Height="30" Margin="0,0,20,0" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Width="300" Value="{Binding Percent, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
